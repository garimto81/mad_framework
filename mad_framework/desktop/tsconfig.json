{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "types": ["node", "vitest/globals"],
    "paths": {
      "@electron/*": ["./electron/*"],
      "@shared/*": ["./shared/*"]
    }
  },
  "include": ["electron/**/*", "shared/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
