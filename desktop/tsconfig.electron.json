{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/main",
    "rootDir": ".",
    "declaration": false,
    "sourceMap": true,
    "resolveJsonModule": true,
    "paths": {
      "@shared/*": ["./shared/*"]
    }
  },
  "include": ["electron/**/*", "shared/**/*"],
  "exclude": ["node_modules", "dist", "src", "tests"]
}
